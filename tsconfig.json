{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",            // or "CommonJS"
    "moduleResolution": "NodeNext",  // or "Node"
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": ["src"]
}